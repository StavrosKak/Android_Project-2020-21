<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ReplyUsrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="User"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ReplyUserImage"
        android:layout_width="117dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/ReplyUsrName"
        app:layout_constraintTop_toBottomOf="@+id/ReplyUsrName" />

    <TextView
        android:id="@+id/ReplyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reply Text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ReplyUserImage"
        app:layout_constraintTop_toBottomOf="@+id/ReplyUserImage" />
</androidx.constraintlayout.widget.ConstraintLayout>